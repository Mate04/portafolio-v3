---
import { cn } from "../lib/utils";
const {
  className = "",
  orientation = "horizontal",
  decorative = true,
  ...props
} = Astro.props;
---

<hr
  aria-orientation={orientation}
  aria-hidden={decorative}
  class={cn(
    "my-4 border-t border-gray-200 shrink-0",
    orientation === "horizontal" ? "h-[1px] w-full" : "h-full w-[1px]",
    className
  )}
  {...props}
/>
