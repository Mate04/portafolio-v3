---
import type { Languaje } from "../../data/info.type";
import { getLangFromUrl, useTranslations } from "../../utils/languaje.utils";
import { Card, CardContent } from "../cards";

interface Props {
  languaje: Languaje;
}

const { languaje } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Card> 
  <CardContent class="p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">
      {t('languaje')}
    </h3>
    <div class="space-y-2">
      {
        languaje.map(({ idioma, nivel }) => {
          return (
            <div class="flex justify-between">
              <span class="text-sm text-gray-700">{idioma}</span>
              <span class="text-sm text-gray-500">{nivel}</span>
            </div>
          );
        })
      }
    </div>
  </CardContent>
</Card>
