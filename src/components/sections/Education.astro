---
import Title from "../Title.astro";
import type { Education } from "../../data/info.type";
import { Card, CardContent } from "../cards";
import { getLangFromUrl, useTranslations } from "../../utils/languaje.utils";

interface Props {
  education: Education;
}

const { education } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section>
  <Title title={t('Education')} />
  <div class="space-y-4">
    {
      education.map(
        ({ titulo, institucion, fechaDesde, fechaHasta, descripcion }) => (
          <Card>
            <CardContent class="p-6">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">{titulo}</h3>
                  <p class="text-blue-600 font-medium">{institucion}</p>
                </div>
                <span class="text-sm text-gray-500 mt-1 md:mt-0">
                  {fechaDesde} - {fechaHasta}
                </span>
              </div>
                {descripcion && <p class="text-gray-700">{descripcion}</p>}

            </CardContent>
          </Card>
        )
      )
    }
  </div>
</section>
